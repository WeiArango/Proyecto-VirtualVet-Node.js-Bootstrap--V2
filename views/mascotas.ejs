<!-- Formulario para editar los datos de una mascota -->
<section id="editPetForm" class="editPetForm" style="display: none;">
  <h3>Editar Mascota</h3>
  <form id="formEditarMascota" method="post">
    <!-- Campo oculto para almacenar primary_key -->
    <input type="hidden" id="primary_key" name="primary_key">
    
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required>
    
    <label for="especie">Especie:</label>
    <input type="text" id="especie" name="especie" required>
    
    <label for="raza">Raza:</label>
    <input type="text" id="raza" name="raza" required>
    
    <label for="fecha_nto">Fecha de Nacimiento:</label>
    <input type="date" id="fecha_nto" name="fecha_nto" required>
    
    <label for="sexo">Sexo:</label>
    <input type="text" id="sexo" name="sexo" required>
    
    <label for="peso">Peso:</label>
    <input type="number" id="peso" name="peso" required>

    <label for="vacunacion">Vacunación:</label>
    <input type="text" id="vacunacion" name="vacunacion" required>

    <label for="desparasitacion">Desparasitación:</label>
    <input type="text" id="desparasitacion" name="desparasitacion" required>

    <label for="tipo_vivienda">Tipo de Vivienda:</label>
    <input type="text" id="vivienda" name="tipo_vivienda" required>

    <label for="tipo_alimentacion">Tipo de Alimentación:</label>
    <input type="text" id="alimento" name="tipo_alimentacion" required>

    <label for="trat_previos">Tratamientos Previos:</label>
    <input type="text" id="trat_previos" name="trat_med_ant" required>

    <label for="allergias">Alergias:</label>
    <input type="text" id="allergias" name="alergias_med" required>

    <label for="cual">¿Cuál?:</label>
    <input type="text" id="cual" name="cual">

    <button type="submit">Guardar Cambios</button>
    <button type="button" onclick="cancelEdit()">Cancelar</button>
  </form>
</section>


<section id="registerPet" class="registerPet">
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerPetModal" id="button-modal">
    Registrar Mascota
  </button>

  <div class="modal fade" id="registerPetModal" tabindex="-1" aria-labelledby="registerPetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">          
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <form id="registerPet-form" action="/registerpet" method="post">
            <label for="registerPet-form">Nueva Mascota</label><br> 
            <input type="text" class="form-control mb-2" name="id_mascota" readonly disabled placeholder="ID Mascota" id="id_mascota_escondido">

            <input type="text" class="form-control mb-2" name="nombre" id="nombreMascota" placeholder="Nombre">
            
            <input type="text" name="raza" class="form-control mb-2" id="raza" placeholder="Raza">
            
            <label for="fechaNto" class="form-label">Fecha de nacimiento</label>
            <input type="date" class="form-control mb-2" name="fecha_nto" id="fechaNto" placeholder="Fecha de nacimiento">

            <label for="sexo" class="form-label">Sexo</label>
            <select name="sexo" class="form-select mb-2" id="sexo">
              <option selected>Hembra</option>
              <option value="Macho">Macho</option>
            </select>

            <label for="peso" class="form-label">Peso en Kg</label>
            <select name="peso" class="form-select mb-2" id="peso">
              <option selected>1 a 5</option>
              <option value="6 a 9">6 a 9</option>
              <option value="10 a 15">10 a 15</option>
              <option value="15+">15+</option>
            </select>

            <label for="especie" class="form-label">Especie</label>
            <select name="especie" class="form-select mb-2" id="especie">
              <option selected>Canino</option>
              <option value="Felino">Felino</option>
              <option value="Otros">Otros</option>
            </select>
            
            <label for="vacunacion" class="form-label">Vacunación</label>
            <select name="vacunacion" class="form-select mb-2" id="vacunacion">
              <option selected>No</option>
              <option value="Todas">Todas</option>
              <option value="Sólo Rabia">Sólo Rabia</option>
            </select>

            <label for="desparasitacion" class="form-label">Desparasitación</label>
            <select name="desparasitacion" class="form-select mb-2" id="desparasitacion">
              <option selected>No</option>
              <option value="Si">Sí</option>
            </select>

            <label for="vivienda" class="form-label">Tipo de vivienda</label>
            <select name="tipo_vivienda" class="form-select mb-2" id="vivienda">
              <option selected>Casa</option>
              <option value="Apartamento">Apartamento</option>
              <option value="Finca">Finca</option>
            </select>

            <label for="alimento" class="form-label">Tipo de alimento</label>
            <select name="tipo_alimentacion" class="form-select mb-2" id="alimento">
              <option selected>Alimento casero</option>
              <option value="Concentrado">Alimento concentrado</option>
              <option value="Ambas">Ambas</option>
            </select>

            <label for="trat_previos" class="form-label">Tratamientos Previos</label>
            <select name="trat_med_ant" class="form-select mb-2" id="trat_previos">
              <option selected>No</option>
              <option value="Si">Sí</option>
            </select>

            <label for="allergias" class="form-label">Alergias a medicamentos</label>
            <select name="alergias_med" class="form-select mb-2" id="allergias">
              <option selected>No</option>
              <option value="Si">Sí</option>
            </select>

            <textarea class="form-control mt-3" name="cual" rows="4" placeholder="¿Cuál?" id="cual"></textarea>

            <button type="submit" value="mascotas" id="registerPet-submit" class="btn btn-primary mt-3">Registrar</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
</section>



