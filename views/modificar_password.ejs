    <link rel="stylesheet" href="../style/reset_pass.css">
</head>
<body>
    <main>
        <div class="form-container">                     
            <form id="modificarPassword" action="/modificarPassword" method="post" class="mb-3">             
                
                <input type="password" name="clave_actual" id="clave_actual" placeholder="Introduce tu contraseña" class="form-control mb-3">

                <input type="password" name="new_password" id="new_password" placeholder="Digita contraseña nueva" class="form-control mb-3">

                <input type="password" name="repeat_password" id="repeat_password" placeholder="Repite contraseña nueva" class="form-control mb-3">
                                                              
                <button type="submit" value="modificarPassword" class="btn btn-primary mb-3">Modificar Password</button> 
                          
                <p class="error escondido">Las contraseñas no coinciden</p>
                <p class="success escondido">Contraseña Modificada con éxito.</p>
                <a href="/">Regresar</a> 
            </form>                   
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="../index.js"></script>   
    <script src="../src/modificar_password.js"></script>   
</body>
